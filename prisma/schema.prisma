generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id             Int    @id @default(autoincrement())
  username       String @unique
  hashedPassword String
  salt           String
  todos          Todo[]
}

model Todo {
  id        Int     @id @default(autoincrement())
  title     String
  completed Boolean
  ownerId   Int
  owner     User    @relation(fields: [ownerId], references: [id])
}
