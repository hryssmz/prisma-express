doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    title Express â€¢ TodoMVC
    link(rel="stylesheet", href="/css/base.css")
    link(rel="stylesheet", href="/css/index.css")
    link(rel="stylesheet", href="/css/login.css")
  body
    section.prompt
      h3 todos
      h1 Sign up
      form(action="/signup", method="post")
        section
          label(for="username") Username
          input#username(name="username", autocomplete="username", required)
        section
          label(for="new-password") Password
          input#new-password(
            name="password",
            type="password",
            autocomplete="new-password",
            required
          )
        button(type="submit") Sign up
      hr
      p.help Already have an account? #[a(href="/login") Sign in]
    footer.info
      p Created by #[a(href="https://www.jaredhanson.me") Jared Hanson]
      p Part of #[a(href="https://todomvc.com") TodoMVC]
      p Authentication powered by #[a(href="https://www.passportjs.org") Passport]
